{
  "name": "electron-react-dva-boilerplate",
  "version": "0.1.2",
  "private": true,
  "author": {
    "name": "northernerve",
    "email": "northernerve@gmail.com"
  },
  "description": "Electron application boilerplate based on React, React Router, Webpack, React Hot Loader for rapid application development",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ctocto/electron-react-dva-boilerplate.git"
  },
  "dependencies": {
    "customize-cra": "^0.4.1",
    "dva": "^2.4.1",
    "electron-log": "^3.0.7",
    "electron-updater": "^4.1.2",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "history": "^4.9.0",
    "immer": "^3.1.3",
    "lodash": "^4.17.15",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1",
    "redux": "^4.0.4",
    "redux-actions": "^2.6.5",
    "redux-saga": "^1.0.5"
  },
  "homepage": "./",
  "main": "src/start.js",
  "scripts": {
    "start": "nf start -p 3000",
    "build": "react-app-rewired build && npm run copy-electron",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-start": "node src/start-react",
    "react-start": "BROWSER=none react-app-rewired start",
    "pack": "electron-builder --dir",
    "release": "npm run build && electron-builder --publish onTagOrDraft",
    "dist": "npm run build && electron-builder",
    "dist-all": "electron-builder -mwl",
    "dist-mac": "electron-builder -m",
    "dist-win": "electron-builder -w",
    "dist-linux": "electron-builder -l",
    "postinstall": "electron-builder install-app-deps",
    "copy-electron": "cp -r ./src/. ./build/main"
  },
  "build": {
    "productName": "ElectronReactDvaBoilerplate",
    "appId": "com.electron.electron-with-create-react-app",
    "publish": [
      {
        "provider": "github",
        "repo": "electron-react-dva-boilerplate",
        "releaseType": "prerelease"
      }
    ],
    "compression": "store",
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "extends": null,
    "files": [
      "build/",
      "package.json"
    ],
    "extraMetadata": {
      "main": "build/main/start.js"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "executableName": "ElectronReactDvaBoilerplate",
      "category": "Development"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,less,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    "electron >= 1.6"
  ],
  "devDependencies": {
    "babel-plugin-react-require": "^3.1.1",
    "electron": "^5.0.6",
    "electron-builder": "^21.1.5",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.18.2",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "react-app-rewired": "^2.1.3"
  }
}
